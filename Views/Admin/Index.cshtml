@using KisiselBlog.Models.EntityFramework
@model BlogTable
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (Model == null)
{
<div class="content-wrapper">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

                        <div class="row">

                            <!-- Right Sidebar -->
                            <div style="width:100%;">
                                <div class="card mt-3 shadow-none">
                                    <div class="card-body">
                                        <form action="/Admin/BlogEkle" enctype="multipart/form-data" method="post">
                                            @Html.AntiForgeryToken()
                                            <div>
                                                <input type="hidden" name="Id" id="Id" value="" />
                                                
                                            </div>
                                            <div class="form-group">
                                                <input type="text" value="" name="Baslik" id="Baslik" class="form-control" placeholder="Başlık" required/>
                                           @Html.ValidationMessage("Baslik")
                                            </div>
                                            <div class="form-group">
                                                <input type="file" class="form-control" name="Resim" placeholder="Fotoğraf ekleme" required />
                                                @Html.ValidationMessage("Resim")
                                            </div>
                                            <div class="form-group">
                                                <input type="text" name="Konu" class="form-control" placeholder="Konu" required>
                                                @Html.ValidationMessage("Konu")
                                            </div>
                                            <div class="form-group">
                                                <textarea type="text" class="form-control" name="Blog" id="summernoteEditor" required placeholder="Message body" style="height: 200px"></textarea>
                                                @Html.ValidationMessage("Blog")
                                            </div>
                                            <div class="form-group">

                                                <button type="submit" class="btn btn-primary waves-effect waves-light m-1"><i class="fa fa-floppy-o mr-1"></i> Ekle</button>
                                            </div>
                                        </form>
                                    </div> <!-- card body -->
                                </div> <!-- card -->
                            </div> <!-- end Col-9 -->
                        </div><!-- End row -->
                    </div>
                </div>
            </div>
        </div><!-- End row -->
    </div>
</div>
}
else
{
<div class="content-wrapper">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

                        <div class="row">

                            <!-- Right Sidebar -->
                            <div style="width:100%;">
                                <div class="card mt-3 shadow-none">
                                    <div class="card-body">
                                        <form action="/Admin/BlogGuncelle" enctype="multipart/form-data" method="post">
                                            @Html.AntiForgeryToken()
                                            <div>
                                                <input type="hidden" name="Id" id="Id" value="@Model.Id" />
                                            </div>
                                            <div class="form-group">
                                                <input type="text" value="@Model.Baslik" name="Baslik" id="Baslik" class="form-control" required placeholder="Başlık">
                                                @Html.ValidationMessageFor(m => m.Baslik)
                                            </div>
                                            <div class="form-group">
                                                <input type="file" class="form-control" name="Resim" placeholder="Fotoğraf ekleme">
                                                <label>@Model.BaslikResim</label>
                                                @Html.ValidationMessageFor(m => m.BaslikResim)
                                            </div>
                                            <div class="form-group">
                                                <input type="text" value="@Model.Konu" name="Konu" required class="form-control" placeholder="Konu">
                                                @Html.ValidationMessageFor(m => m.Konu)
                                            </div>
                                            <div class="form-group">
                                                <textarea type="text" class="form-control" name="Blog" required id="summernoteEditor" placeholder="Message body" style="height: 200px">@Model.Blog</textarea>
                                                @Html.ValidationMessageFor(m => m.Blog)
                                            </div>
                                            <div class="form-group">

                                                <button type="submit" class="btn btn-primary waves-effect waves-light m-1"><i class="fa fa-floppy-o mr-1"></i> Kaydet</button>
                                            </div>
                                        </form>
                                    </div> <!-- card body -->
                                </div> <!-- card -->
                            </div> <!-- end Col-9 -->
                        </div><!-- End row -->
                    </div>
                </div>
            </div>
        </div><!-- End row -->
    </div>
</div>

}