@using KisiselBlog.Models.EntityFramework
@model List<BlogTable>
@{
    ViewBag.Title = "BlogGor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <!--Data Tables -->
    <link href="~/AdminContent/plugins/bootstrap-datatable/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css">
    <link href="~/AdminContent/plugins/bootstrap-datatable/css/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css">


</head>

!-- Start wrapper-->
<div class="clearfix"></div>

<div class="content-wrapper">
    <div class="container-fluid">

        <!-- End Breadcrumb-->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header"><i class="fa fa-table"></i> Data Table Example</div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="default-datatable" class="table table-bordered">
                                <thead>
                                    <tr>

                                        <th>Tarih</th>
                                        <th>Blog</th>
                                        <th>Güncelle</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @Html.AntiForgeryToken()
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td></td>
                                            <td><h2 style="color: #a0693e;">@item.Baslik</h2></td>
                                            <td> <a href="/Admin/BlogGoruntuleGuncelle/@item.Id" class="btn btn-warning">Güncelle</a> </td>
                                            <td> <a class="btn btn-danger" href="/Admin/BlogSil/@item.Id"> Sil</a> </td>

                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>

                                        <th>Tarih</th>
                                        <th>Blog</th>
                                        <th>Güncelle</th>
                                        <th>Sil</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- End Row-->
    </div>
</div>


@section scripts{
    <!--Data Tables js-->
    <script src="~/AdminContent/plugins/bootstrap-datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/AdminContent/plugins/bootstrap-datatable/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/AdminContent/plugins/bootstrap-datatable/js/dataTables.buttons.min.js"></script>
    <script src="~/AdminContent/plugins/bootstrap-datatable/js/buttons.bootstrap4.min.js"></script>
    <script src="~/AdminContent/plugins/bootstrap-datatable/js/jszip.min.js"></script>
    <script src="~/AdminContent/plugins/bootstrap-datatable/js/pdfmake.min.js"></script>
    <script src="~/AdminContent/plugins/bootstrap-datatable/js/vfs_fonts.js"></script>
    <script src="~/AdminContent/plugins/bootstrap-datatable/js/buttons.html5.min.js"></script>
    <script src="~/AdminContent/plugins/bootstrap-datatable/js/buttons.print.min.js"></script>
    <script src="~/AdminContent/plugins/bootstrap-datatable/js/buttons.colVis.min.js"></script>
    <script>
        $(document).ready(function () {
            //Default data table
            $('#default-datatable').DataTable();


            var table = $('#example').DataTable({
                lengthChange: false,
                buttons: ['copy', 'excel', 'pdf', 'print', 'colvis']
            });

            table.buttons().container()
                .appendTo('#example_wrapper .col-md-6:eq(0)');

        });

    </script>
}
