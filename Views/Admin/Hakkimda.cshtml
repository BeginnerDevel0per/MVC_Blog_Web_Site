@using KisiselBlog.Models.EntityFramework
@model HakkimdaTable
@{
    ViewBag.Title = "Hakkimda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (Model != null)
{
    <div class="clearfix"></div>
    <div class="content-wrapper">
        <div class="container-fluid" style="width:30%;">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Resim)" alt="Alternate Text"  />
                    </div>
                </div>
            </div>
        </div>
        <form id="personal-info" enctype="multipart/form-data" action="/Admin/HakkimdaKaydet" method="post">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">Sosyal Medya</div>
                    <hr>
                    <div class="form-group row">
                        <label for="input-21" class="col-sm-2 col-form-label">Instagram</label>
                        <div class="col-sm-10">
                            <input type="text" name="Instagram" class="form-control" id="input-21" value="@Model.Instagram" placeholder="Instagram Url">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input-22" class="col-sm-2 col-form-label">Linkedin</label>
                        <div class="col-sm-10">
                            <input type="text" name="Linkedin" class="form-control" id="input-22" value="@Model.Linkedin" placeholder="Linkedin Url">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input-23" class="col-sm-2 col-form-label">Github</label>
                        <div class="col-sm-10">
                            <input type="text" name="Github" class="form-control" id="input-23" value="@Model.Github" placeholder="Github Url">
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="card-title">Resim Seç</div>
                    <hr>
                    <div class="form-group">
                        <div class="custom-file">
                            <div class=" form-group">
                                <input type="file" class="form-control" name="_Resim">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @Html.AntiForgeryToken()
            <div class="card">
                <div class="card-body">
                    <div class="card-title">Hakkımda</div>
                    <hr>
                    <div class="form-group">
                        <textarea id="summernoteEditor" required name="Hakkimda">@Model.Hakkimda</textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary px-5"><i class="icon-lock"></i> Kaydet</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
}
else
{


    <div class="clearfix"></div>
    <div class="content-wrapper">
        <div class="container-fluid" style="width:30%;">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <img src="" alt="Alternate Text" />
                    </div>
                </div>
            </div>
        </div>
        <form id="personal-info" enctype="multipart/form-data" action="/Admin/HakkimdaKaydet" method="post">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">Sosyal Medya</div>
                    <hr>
                    <div class="form-group row">
                        <label for="input-21" class="col-sm-2 col-form-label">Instagram</label>
                        <div class="col-sm-10">
                            <input type="text" name="Instagram" class="form-control" id="input-21" value="" placeholder="Instagram Url">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input-22" class="col-sm-2 col-form-label">Linkedin</label>
                        <div class="col-sm-10">
                            <input type="text" name="Linkedin" class="form-control" id="input-22" value="" placeholder="Linkedin Url">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input-23" class="col-sm-2 col-form-label">Github</label>
                        <div class="col-sm-10">
                            <input type="text" name="Github" class="form-control" id="input-23" value="" placeholder="Github Url">
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="card-title">Resim Seç</div>
                    <hr>
                    <div class="form-group">
                        <div class="custom-file">
                            <div class=" form-group">
                                <input type="file" class="form-control" name="_Resim" required>
                                @Html.ValidationMessage("_Resim","Resim Boş bırakılamaz")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @Html.AntiForgeryToken()
            <div class="card">
                <div class="card-body">
                    <div class="card-title">Hakkımda</div>
                    <hr>
                    <div class="form-group">
                        @Html.ValidationMessage("Hakkimda")
                        <textarea id="summernoteEditor" name="Hakkimda" required></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary px-5"><i class="icon-lock"></i> Kaydet</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
}



