@model KisiselBlog.ViewModels.HomeViewModels
@using KisiselBlog.Helpers
@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.HakkimdaTable != null)
{
    <!-- page header -->
